<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin | Users</title>
    <link rel="stylesheet" href="../styles/colors.css">
    <link rel="stylesheet" href="../styles/fonts.css">
    <link rel="stylesheet" href="../styles/transfer.css">
    <link rel="stylesheet" href="../styles/table.css">
    <script src="../scripts/admin_updateuser.js"></script>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Status</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td>
                    <form class="update-form" method="post" action="">
                        <input type="hidden" name="id" id="userid" value="<%= user.id %>">
                        <input type="text" name="first_name" id="first_name" value="<%= user.first_name %>">
                        <input type="text" name="last_name" id="last_name" value="<%= user.last_name %>">
                        <select name="status" id="status">
                            <option value="active" <%= user.is_active ? 'selected' : '' %>>Active</option>
                            <option value="inactive" <%= !user.is_active ? 'selected' : '' %>>Inactive</option>
                        </select>
                        <button type="button" id="submit">Update</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
